<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/border"
    app:strokeWidth="1dp"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Icon and Label Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Icon -->
            <ImageView
                android:id="@+id/ivStatIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_code"
                app:tint="@color/primary" />

            <!-- Label -->
            <TextView
                android:id="@+id/tvStatLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/stats_snippets"
                android:textColor="@color/text_secondary"
                android:textSize="11sp"
                android:letterSpacing="0.05" />

        </LinearLayout>

        <!-- Count -->
        <TextView
            android:id="@+id/tvStatCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="142"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Percentage Change -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <!-- Arrow Icon -->
            <ImageView
                android:id="@+id/ivStatArrow"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_arrow_forward"
                android:rotation="-90"
                app:tint="@color/stat_positive" />

            <!-- Percentage Text -->
            <TextView
                android:id="@+id/tvStatPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+5%"
                android:textColor="@color/stat_positive"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
