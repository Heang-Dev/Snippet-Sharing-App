<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="@dimen/snippet_card_corner"
    app:cardElevation="0dp"
    app:strokeColor="@color/border"
    app:strokeWidth="1dp"
    android:layout_marginBottom="@dimen/card_spacing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Language Badge -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="@color/badge_background"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/tvLanguageBadge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Py"
                    android:textColor="@color/badge_text"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Title and Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <!-- Snippet Title -->
                <TextView
                    android:id="@+id/tvSnippetTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Python CSV Parser"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Updated Time -->
                <TextView
                    android:id="@+id/tvSnippetTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Updated 2h ago"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- More Menu -->
            <ImageView
                android:id="@+id/ivSnippetMenu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_help"
                app:tint="@color/text_secondary"
                android:contentDescription="More options" />

        </LinearLayout>

        <!-- Code Preview -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/code_background"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/tvCodePreview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/code_preview_height"
                android:padding="12dp"
                android:text="import csv\ndef parse_csv(file_path):\n    with open(file_path, 'r') as f:\n        reader = csv.reader(f)"
                android:textColor="@color/code_text"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:maxLines="5"
                android:ellipsize="end" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Tags Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:gravity="center_vertical">

            <!-- Tags Container -->
            <LinearLayout
                android:id="@+id/llTagsContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- Tag 1 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    android:background="@color/divider"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_marginEnd="6dp" />

                <!-- Tag 2 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Utils"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    android:background="@color/divider"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp" />

            </LinearLayout>

            <!-- Language Indicator Dots -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@color/error"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@color/warning"
                    android:layout_marginEnd="4dp" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@color/success" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
