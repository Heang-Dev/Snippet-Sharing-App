        <item name="android:color">#1810B981</item>
        <item name="android:width">60dp</item>
        <item name="android:height">36dp</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <!-- Bottom Navigation Text Styles (San Francisco-Inspired) -->
    <style name="BottomNavTextActive">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="BottomNavTextInactive">
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
