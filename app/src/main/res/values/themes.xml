<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.Snippet_Sharing_App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <style name="Theme.Snippet_Sharing_App" parent="Base.Theme.Snippet_Sharing_App" />

    <!-- Dark Auth Theme for Login/Register screens -->
    <style name="Theme.Snippet_Sharing_App.DarkAuth" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/text_on_dark</item>
        <item name="colorOnSurfaceVariant">@color/text_on_dark_secondary</item>
        <item name="colorError">@color/error</item>
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Button Styles -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Text Input Styles -->
    <style name="TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Text Styles -->
    <style name="HeadingLarge">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="HeadingMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Card Style -->
    <style name="CardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Dark Theme Button Styles -->
    <style name="DarkPrimaryButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/dark_background</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DarkSocialButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/text_on_dark</item>
        <item name="strokeColor">@color/dark_input_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/dark_card</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="iconTint">@null</item>
        <item name="iconPadding">8dp</item>
    </style>

    <!-- Dark Theme Text Input Style -->
    <style name="DarkTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/dark_text_input_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxBackgroundColor">@color/dark_input_bg</item>
        <item name="hintTextColor">@color/text_on_dark_secondary</item>
        <item name="android:textColorHint">@color/text_on_dark_hint</item>
        <item name="startIconTint">@color/text_on_dark_secondary</item>
        <item name="endIconTint">@color/text_on_dark_secondary</item>
        <item name="errorIconTint">@color/error</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="errorTextColor">@color/error</item>
    </style>

    <!-- Dark Theme Text Styles -->
    <style name="DarkHeadingLarge">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_on_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DarkHeadingMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_on_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DarkBodyText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_on_dark_secondary</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="DarkLinkText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Label Style with Required Asterisk -->
    <style name="DarkInputLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_on_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Checkbox Style for Dark Theme -->
    <style name="DarkCheckbox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_dark_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
